<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" type="text/css" href="../css/normal.css"/>
		<!--<link rel="stylesheet" type="text/css" href="css/login.css"/>-->
		<link rel="stylesheet" type="text/css" href="../css/wjj.css"/>
		<script src="../js/jquery-3.1.0.min.js" type="text/javascript" charset="utf-8"></script>
		<title></title>
	</head>
	<body>
		<header class="top_fixed">
			<a href=""></a>
			登录
		</header>
		<section>
			<form class="login_form" action="" method="post">
				<div class="user">
					用户名：
					<input type="text" name="" id="mobile" />
				</div>
				<div class="password">
					密&nbsp;&nbsp;&nbsp;&nbsp;码：
					<input type="password" name="" id="password1" />
				</div>
				<input type="button" id="signup" value="登录"/>
				<a href="signup.html" class="signup">注册</a>
				<a href="" class="forget">忘记密码</a>
			</form>
		</section>
		<script type="text/javascript">
			$(function() {
				var apiUrl = "http://120.55.86.40:82/yiyuanapi/";
				
				$("#signup").click(function() {
					var mobile = $("#mobile").val();
				var password1 = $("#password1").val();
					$.ajax({
						type: "post",
						url: apiUrl + "member/login",
						async: true,
						data: {
							mobile: mobile,
							password: password1
						},
						dataType: "json",
						success: function(msg) {
							console.log(msg);
							var data = msg.data;

						},
						error: function(err) {
							console.log(err)
						}
					});
				})

			})
		</script>
	</body>
</html>

