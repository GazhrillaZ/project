*{
	margin: 0;
	padding: 0;
	list-style: none;
	font-family: "微软雅黑";
}
a{
	text-decoration: none;
}

body{
	background: #F0F0F0;
}
.top_fixed{
	width: 100%;
	height: 0.43rem;
	background: #f2473d;
	position: relative;
	border-top:0.01rem solid #f2473d;
	position: fixed;
	top: 0;
	z-index: 1111;
	
}

.top_title{
	font-size: 0.18rem;
	line-height: 0.43rem;
	text-align: center;
	color: #fff;
}

.top_fixed>.top_return{
	width: 0.105rem;
	display: block;
	position: absolute;
	top: 0.12rem;
	left: 0.1rem;
}

.top_fixed>.top_return>img{
	width: 100%;
	display: block;
}

.top_fixed>.top_sorts{
	width: 0.22rem;
	height: 0.295rem;
	position: absolute;
	left: 0.125rem;
	top: 0.14rem;
	display: block;
}
.top_fixed>.top_sorts>img{
	display: block;
	width: 0.22rem;
}
.top_fixed>.top_logo{
	width: 1.08rem;
	display: block;
	/*margin-left: 0.73rem;
	margin-top: 0.11rem;
	float: left;*/
	margin: auto;
	margin-top: 0.11rem;
}

.bottom_fixed{
	width: 100%;
	height: 0.5rem;
	position: fixed;
	bottom: 0;
	border-top:0.01rem solid #b2b2b2;
	box-sizing: border-box;
	background: #fff;
	z-index: 1111;
}

.bottom_fixed>ul{
	width: 100%;
	height: 100%;
}

.bottom_fixed>ul>li{
	width: 20%;
	height: 100%;
	float: left;
}

.bottom_fixed>ul>li>a{
	width: 100%;
	height:auto;
	display: block;
	text-align: center;
	
}

.bottom_fixed>ul>li>a>img{
	display: block;
	height: 0.2rem;
	margin: auto;
	margin-top: 0.11rem;
}

.bottom_fixed>ul>li>a>p{
	margin-top: 0.075rem;
	font-size: 0.1rem;
	color: #929292;
}

.bottom_fixed>ul>li>a>.bottom_active{
	color:#f3665e;
}


