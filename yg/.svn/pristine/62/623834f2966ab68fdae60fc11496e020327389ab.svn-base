.setting_pic,.setting_account>ul>li>a>span{
	color: #373737;
	font-size: 0.15rem;
}

.setting_pic{
	width: 100%;
	height: 0.8rem;
	background: #FFFFFF;
	border-top: 1px solid #fff;
	border-bottom: 1px solid #F0F0F0;
	margin-top: 0.43rem;
	box-sizing: border-box;
}

.setting_pic>span{
	font-size: 0.15rem;
	width: 0.4rem;
	height: 0.8rem;
	line-height: 0.8rem;
	float: left;
	display: block;
	margin-left: 0.15rem;
	font-weight: bold;
}

.setting_pic>img:nth-child(2){
	width: 0.54rem;
	display: block;
	margin-top: 0.13rem;
	margin-left: 1.9rem;
	float: left;
}

.setting_pic>img:last-child{
	width: 0.06rem;
	display: block;
	margin-left: 0.07rem;
	margin-top: 0.34rem;
	float: left;
}

.setting_account,.setting_account>ul{
	width: 100%;
	height: auto;
}

.setting_account>ul>li{
	width: 100%;
	height: 0.45rem;
	background: #fff;
	border-bottom: 1px solid #F0F0F0;
	line-height: 0.45rem;
	position: relative;
}

.setting_account>ul>.setting_greyBar{
	width: 100%;
	height: 0.2rem;
	background: #F0F0F0;
}

.setting_account>ul>li>a{
	width: 100%;
	height: 100%;
	display: block;
}

.setting_account>ul>li>a>span:first-child{
	position: absolute;
	top: 0;
	left:0;
	text-indent: 0.15rem;
}

.setting_account>ul>li>a>span:last-child{
	width: auto;
	float: right;
	margin-right: 0.1rem;
}

.setting_account>ul>li>a>img{
	display: block;
	float: right;
	width: 0.06rem;
	margin-top: 0.165rem;
	margin-right: 0.1rem;
}

.setting_logout{
	width: 2.9rem;
	height: 0.4rem;
	margin: auto;
	margin-top: 0.15rem;
	line-height: 0.4rem;
	text-align: center;
	background: #f2473d;
	font-size: 0.15rem;
	color: #fff;
	display: block;
	border-radius: 0.1rem;
}

